{
  "name": "@addon-core/inject-css",
  "version": "0.2.0",
  "description": "A lightweight TypeScript-friendly library to inject CSS into browser extensions (Manifest V2 & V3)",
  "keywords": [
    "browser",
    "addon",
    "extension",
    "google",
    "chrome",
    "opera",
    "edge",
    "firefox",
    "safari",
    "api",
    "style",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/addon-stack/inject-css"
  },
  "homepage": "https://github.com/addon-stack/inject-css",
  "bugs": {
    "url": "https://github.com/addon-stack/inject-css/issues"
  },
  "license": "MIT",
  "author": "Addon Stack <addonbonedev@gmail.com>",
  "contributors": [
    "Anjey Tsibylskij (https://github.com/atldays)"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "prepare": "husky",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "prepublishOnly": "npm run build",
    "format": "biome format --write .",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:fix:aggressive": "biome check --write --unsafe .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest --bail --passWithNoTests",
    "test:ci": "jest --ci --passWithNoTests --coverage",
    "release": "release-it"
  },
  "dependencies": {
    "@addon-core/browser": "^0.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/chrome": "^0.1.12",
    "@types/jest": "^30.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "release-it": "^19.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "^9.3.5",
    "source-map": "npm:source-map-js@^1.2.0"
  }
}
