{
  "name": "@addon-core/inject-css",
  "version": "0.2.0",
  "description": "A lightweight TypeScript-friendly library to inject CSS into browser extensions (Manifest V2 & V3)",
  "keywords": [
    "browser",
    "addon",
    "extension",
    "google",
    "chrome",
    "opera",
    "edge",
    "firefox",
    "safari",
    "api",
    "style",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/addon-stack/inject-css"
  },
  "homepage": "https://github.com/addon-stack/inject-css",
  "bugs": {
    "url": "https://github.com/addon-stack/inject-css/issues"
  },
  "license": "MIT",
  "author": "Addon Stack <addonbonedev@gmail.com>",
  "contributors": [
    "Anjey Tsibylskij (https://github.com/atldays)"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "format": "prettier --write .",
    "build": "tsup",
    "build:watch": "tsup --watch"
  },
  "dependencies": {
    "@addon-core/browser": "^0.2.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.326",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
